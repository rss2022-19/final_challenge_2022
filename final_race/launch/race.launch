<launch>

  <!-- Launch the parking controller for final race challenge on the real robot. Launches safety controller, controller node, goal detection node, and the homography transformer -->
  
  <node pkg="safety_controller" name="safety_controller" type="safety_controller.py" output="screen">
  </node>

  <node pkg="final_race" name="parking_controller" type="parking_controller.py" output="screen">
  	<param name="drive_topic" value="/vesc/ackermann_cmd_mux/input/navigation" />
  </node>

  <node pkg="final_race" name="lane_detector" type="lane_detector.py" output="screen">
  </node>

  <node pkg="final_race" name="homography_transformer" type="homography_transformer.py" output="screen">
  </node>

  <node pkg="image_transport" name="republish" type="republish" args="raw in:=/cone_debug_img out:=/cone_debug_img_compressed" output="screen"></node>

</launch>
